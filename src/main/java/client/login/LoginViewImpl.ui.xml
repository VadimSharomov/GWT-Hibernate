<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>

    <ui:with type="client.login.LoginResources" field="res"/>

    <gwt:HTMLPanel>
        <gwt:HorizontalPanel styleName="{res.style.logoPanel}">
            <gwt:Image ui:field="imageLogo"/>
            <gwt:VerticalPanel styleName="{res.style.verticalLogoPanel}">
                <gwt:Label ui:field="logoLabel" styleName="{res.style.logoText}"/>
            </gwt:VerticalPanel>
        </gwt:HorizontalPanel>

        <gwt:HorizontalPanel styleName="{res.style.horizontalCentralPanel}">
        </gwt:HorizontalPanel>

        <gwt:VerticalPanel styleName="{res.style.verticalCentralPanel}">
            <gwt:Label ui:field="loginLabel" text="Login" styleName="{res.style.blackText}"/>
            <gwt:TextBox ui:field="loginBox" styleName="{res.style.box}"/>

            <gwt:Label ui:field="passwordLabel" text="Password" styleName="{res.style.blackText}"/>
            <gwt:PasswordTextBox ui:field="passwordBox" styleName="{res.style.box}"/>

            <gwt:Button ui:field="buttonSubmit" text="Submit" styleName="{res.style.loginButton}"/>

            <gwt:Label ui:field="completionLabel1" styleName="{res.style.blackText}"/>
            <gwt:Label ui:field="completionLabel2" styleName="{res.style.redText}"/>
            <gwt:Anchor ui:field="logoutLink" styleName="{res.style.blackText}"/>
        </gwt:VerticalPanel>

        <gwt:Label ui:field="labelFooter" styleName="{res.style.footer}"/>
        <gwt:Image ui:field="imageFooter"/>

    </gwt:HTMLPanel>

</ui:UiBinder>